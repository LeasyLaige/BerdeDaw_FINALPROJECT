  <children>
    <AnchorPane fx:id="miniPane" maxHeight="-1.0" maxWidth="-1.0" style="-fx-background-color: black;" VBox.vgrow="ALWAYS">
         <children>
            <ImageView fx:id="miniMediaImage" fitHeight="209.0" fitWidth="215.0" layoutX="30.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true">
