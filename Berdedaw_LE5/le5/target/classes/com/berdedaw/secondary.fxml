                  <Image url="@../../../../../../../../../../Downloads/BerdeDaw_FINALPROJECT/Berdedaw_LE5/le5/src/main/resources/com/berdedaw/images/logo.png" />
               </image>
            </ImageView>
            <Slider fx:id="mediaSlider" layoutX="104.0" layoutY="355.0" prefHeight="24.0" prefWidth="400.0" />
            <Label fx:id="currentTimeLabel" layoutX="57.0" layoutY="356.0" text="0:00" textFill="WHITE" />
            <Label fx:id="totalDurationLabel" layoutX="516.0" layoutY="356.0" text="0:00" textFill="WHITE" />
            <Button fx:id="playButton" layoutX="267.0" layoutY="269.0" mnemonicParsing="false" onAction="#playButtonClicked" prefHeight="77.0" prefWidth="74.0" style="-fx-background-radius: 20; -fx-background-color: rgba(0,0,0,0); -fx-border-color: white; -fx-border-radius: 200;" text="▶" textFill="WHITE">
               <font>
                  <Font size="35.0" />
               </font>
            </Button>
            <Button fx:id="nextButton" layoutX="360.0" layoutY="276.0" mnemonicParsing="false" onAction="#nextButtonClicked" style="-fx-background-color: rgba(0,0,0,0);" text="⏭ " textFill="WHITE">
               <font>
                  <Font size="25.0" />
               </font>
            </Button>
            <Button fx:id="previousButton" layoutX="190.0" layoutY="276.0" mnemonicParsing="false" onAction="#previousButtonClicked" style="-fx-background-color: rgba(0,0,0,0);" text="⏮" textFill="WHITE">
               <font>
                  <Font size="25.0" />
               </font>
            </Button>
            <Label fx:id="miniMediaTitle" layoutX="265.0" layoutY="30.0" text="Media Title" textFill="WHITE">
               <font>
                  <Font name="Franklin Gothic Demi Cond" size="32.0" />
               </font>
            </Label>
            <Label fx:id="miniMediaAuthor" layoutX="265.0" layoutY="70.0" text="Media Author" textFill="#918c8c">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button layoutX="430.0" layoutY="268.0" mnemonicParsing="false" style="-fx-background-color: rgba(0,0,0,0);" text="♡" textFill="WHITE">
               <font>
                  <Font size="35.0" />
               </font>
            </Button>
            <Button layoutX="106.0" layoutY="265.0" mnemonicParsing="false" style="-fx-background-color: rgba(0,0,0,0);" text="+" textFill="WHITE">
               <font>
                  <Font size="35.0" />
               </font>
            </Button>
            <Button fx:id="returnButton" layoutX="516.0" layoutY="6.0" mnemonicParsing="false" onAction="#handleReturnButtonClicked" style="-fx-background-color: rgba(0,0,0,0);" text="⛶" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="35.0" />
               </font>
            </Button>
            <Button fx:id="resumeButton" layoutX="267.0" layoutY="269.0" mnemonicParsing="false" onAction="#resumeButtonClicked" prefHeight="77.0" prefWidth="74.0" style="-fx-background-radius: 20; -fx-background-color: rgba(0,0,0,0); -fx-border-color: white; -fx-border-radius: 200;" text="II" textFill="WHITE" visible="false">
